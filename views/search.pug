html
	head
		link(rel="stylesheet" href='/css/main.css' type="text/css")
		link(rel="stylesheet" href='/bootstrap/css/bootstrap.min.css' type="text/css")
		link(rel="stylesheet" href='/css/jquery-ui.min.css' type="text/css")
	body
		h1(class='text-center') Search for a user
		div(class='container')
			form
				div( class='form-group row')
					label( for='name' class="col-sm-2 col-form-label col-form-label-lg") Name
					div(class="col-sm-10")
						input(
							type='text'
							name='name'
							id='name'
							placeholder='Insert name'
							class="form-control form-control-lg"
						)
				div( class='form-group row text-center')
					input(type="submit" id="call_back_btn" class='btn btn-primary' value="Search")
				//- div(id='result')
		script(src='/js/jquery-3.1.1.min.js')
		script(src='/js/jquery-ui.min.js')
		script.
			$(document).ready(function() {
				$('#call_back_btn').click( function ( event ) {
					event.preventDefault()
				})
				$('#name').keyup( function( ) {
					var txt = $(this).val()
					$.post( "/givethisback", {inputData: txt}, function ( data, status ) {
						console.log( data )
						$('#name').autocomplete({
							source: data,
							minLength: 1
						})			
					})

				})
			})