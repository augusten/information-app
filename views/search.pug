html
	head
		link(rel="stylesheet" href='/css/main.css' type="text/css")
		//- link(rel="stylesheet" href='/bootstrap/css/bootstrap.min.css' type="text/css")
		link(rel="stylesheet" href='/css/jquery-ui.min.css' type="text/css")
		link(rel="stylesheet" href="/css/materialize.min.css")
		link(href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css')
	body
		h1(class='text-center') Search for a user
		div(class='container')
			div(class='row')
				form(class='col s12' method='POST', action='/result')
					//- create a form that would use POST request after submission
					div( class='row')
						div(class='input-field col s6')
							//- input name
							input(
								type='text'
								name='name'
								id='name'
								list='datalist'
								placeholder='Insert name'
								class="active validate"
							)
							label( for='name') Name
							datalist(id="datalist")

							//- div(class="col-sm-10")
								//- input name
						//- div( class='form-group row text-center')
					input(type="submit" class="btn" id="call_back_btn" value="Search")
						//- 	input(type="submit" id="call_back_btn" class='btn btn-primary' value="Search")
	script(src='/js/jquery-3.1.1.min.js')
	script(src='/js/jquery-ui.min.js')
