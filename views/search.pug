html
	head
		link(rel="stylesheet" href='/css/main.css' type="text/css")
		link(rel="stylesheet" href='/css/jquery-ui.min.css' type="text/css")
		link(rel="stylesheet" href="/css/materialize.min.css")
		link(href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css')
	body
		h1(class='valign center') Search for a user
		div(class='container valign center')
			div(class='row')
				form(class='col s12 valign center' method='POST', action='/result')
					//- create a form that would use POST request after submission
					div( class='row')
						div(class='col s2')
						div(class='input-field col s8 valign center')
							//- input name
							input(
								type='text'
								name='name'
								id='name'
								list='datalist'
								placeholder='Insert full name'
								class="active validate valign center"
							)
							datalist(id="datalist")
						div(class='col s2')
					input(type="submit" class="btn" id="call_back_btn" value="Search")
	script(src='/js/jquery-3.1.1.min.js')
	script(src='/js/jquery-ui.min.js')
	script(src='/js/materialize.min.js')
	script(src='/js/main.js')